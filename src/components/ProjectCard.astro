---
export interface Props {
	title: string
	description: string
	image: string
	href: string
}

const { title, description, image, href } = Astro.props
---

<article class="group cursor-pointer">
	<a href={href} class="block">
		<div class="space-y-4">
			<div class="space-y-3">
				<h3 class="text-xl font-semibold text-white group-hover:text-gray-300 transition-colors">
					{title}
				</h3>
				<p class="text-gray-400 text-sm leading-relaxed">
					{description}
				</p>
			</div>
			<div class="w-full h-48 bg-gray-800 rounded-lg overflow-hidden">
				<img 
					src={image} 
					alt={title}
					class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
				/>
			</div>
		</div>
	</a>
</article>
